{% extends "base.html.twig" %}

{% block main %}
    <div class="article-box">
        <section class="all-articles">
            <h2>Tous les articles (Admin)</h2>

            <hr>  

            {% for article in articles %}
                <article>
                    <h3>{{ article.title }}</h3>

                    <div>
                        <img src="/{{ article.imgUrl }}" alt="">
                    </div>

                    <a href="{{  path('admin_article_show', {'id' : article.id}) }}" class="show_article">Voir l'article</a>

                    <div class="action-link">
                        <a href="{{ path('article_edit', {'id' : article.id}) }}">Modifier</a>
                        <a href="{{ path('article_delete', {'id' : article.id}) }}">Supprimer</a>
                    </div>
                </article>
            {% endfor %}
        </section>

        <aside>
            <h2>Article r√©cents</h2>

            <hr>

            {% for article in articles %}
                <article>
                    <h5>{{ article.title }}</h5>

                    <div>
                        <img src="/images/photo.jpeg" alt="">
                    </div>

                    <a href="{{  path('admin_article_show', {'id' : article.id}) }}" class="show_article">Voir l'article</a>
                </article>
            {% endfor %}
        </aside>
    </div>
{% endblock %}